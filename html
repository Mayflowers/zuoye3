   <script>
   var img=document.getElementById("Blk01_Focus_Cont").getElementsByTagName('LI');
   var index=0;
   function Move(flag){
    
    for (var s=0 ; s<img.length; s++) {
       img[s].style.display="none";
    };
     if (!flag) {
         index++;
        if (index > (img.length - 1)) {index = 0}
        } else {
          index--;
          if (index < 0) {index = img.length - 1}
                        }
     img[index].style.display="";
  }
function auto(){
    play=setInterval(function(){Move(true);},5000);
}
function Stop(){
  var noplay=function() {
   clearInterval(play);
                    };
}

 </script>
